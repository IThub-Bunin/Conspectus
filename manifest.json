{
    "manifest_version": 3,
    "name": "Conspectus",
    "version": "1.0",

    "description": "Редактор конспектов внутри Булгакова",

    "permissions": ["tabs"],

    "content_scripts": [
        {
            "matches": ["*://ithub.bulgakov.app/student", "*://ithub.bulgakov.app/about", "*://ithub.bulgakov.app/lessons/*", "*://ithub.bulgakov.app/schedule", "*://ithub.bulgakov.app/users/*", "*://ithub.bulgakov.app/me/*", "*://ithub.bulgakov.app/conspectus/*"],
            "js": ["bulgakov_pages/addConspectusTopMenu.js"]
        },
        {
            "matches": ["*://ithub.bulgakov.app/lessons/*"],
            "js": ["bulgakov_pages/addButton.js"],
            "css": ["bulgakov_pages/style.css"]
        },
        {
            "matches": ["*://ithub.bulgakov.app/conspectus/*"],
            "js": ["editorPage/editorPage.js", "editorPage/menuButtonStyle.js", "editorPage/generateConspList.js"],
            "css": ["editorPage/style.css"]
        }
    ],

    "action": {
        "icons": {
            "48": "icons/pen-svgrepo-com.svg"
        },
        "default_popup": "popup/popup.html"
    },

    "web_accessible_resources": [{
        "resources": ["icons/angle-arrow-down_icon-icons.com_73683.svg"],
        "matches": ["https://ithub.bulgakov.app/*"]
    }]

}